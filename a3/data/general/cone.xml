<scenefile>
	<globaldata>
		<diffusecoeff v="0.5"/>
		<specularcoeff v="0.5"/>
		<ambientcoeff v="0.5"/>
	</globaldata>

	<cameradata>
		<pos x="0" y="0" z="2"/>
		<up x="0" y="1" z="0"/>
		<focus x="0" y="0" z="0"/>
		<heightangle v="40"/>
	</cameradata>

	<lightdata>
		<id v="0"/>
		<color r="1" g="1" b="1"/>
		<function v1="0.1" v2="1" v3="0"/>
		<position x="3" y="3" z="3"/>
	</lightdata>

	<object type="tree" name="aCone">
		<transblock>
			<object type="primitive" name="cone" >
				<diffuse r="1" g="0" b="0"/>
				<ambient r="0" g="0" b="0"/>
			</object>
		</transblock>
	</object>

	<object type="tree" name="root">
		<transblock>
			<translate x="0" y="0" z="0"/>
			<rotate x="0" y="1" z="0" angle="30"/>
			<rotate x="1" y="0" z="0" angle="90"/>
			<object type="master" name="aCone" />
		</transblock>
	</object>

</scenefile>

