INCFLAGS  = -I ./include/GL
INCFLAGS += -I ./include/vecmath

LINKFLAGS  = -lglut -lGL -lGLU
LINKFLAGS += -L ./vecmath -lvecmath

CFLAGS    = -O0 -g
CC        = g++
SRCS      = main.cpp
OBJS      = $(SRCS:.cpp=.o)
PROG      = a0

all: $(SRCS) $(PROG)

$(PROG): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $@ $(INCFLAGS) $(LINKFLAGS)

.cpp.o:
	$(CC) $(CFLAGS) $< -c -o $@ $(INCFLAGS)

depend:
	makedepend $(INCFLAGS) -Y $(SRCS)

clean:
	rm $(OBJS) $(PROG)

