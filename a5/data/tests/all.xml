<scenefile>
<globaldata>
  <diffusecoeff v="0.5"/>
  <specularcoeff v="0.5"/>
  <ambientcoeff v="0.5"/>
</globaldata>

<cameradata>
  <pos x="-4" y="3" z="3"/>
  <up x="0" y="1" z="0"/>
  <focus x="0" y="0" z="0"/>
  <heightangle v="30"/>
</cameradata>

<lightdata>
  <id v="0"/>
  <position x="10" y="10" z="10"/>
  <color r="0.3" g="0.3" b="0.3"/>
</lightdata>

<lightdata>
  <id v="1"/>
  <position x="0" y="0" z="0"/>
  <color r="0.1" g="0.1" b="0.1"/>
</lightdata>

<object type="tree" name="root">
  <transblock>
    <translate x="0" y="-0.6" z="0"/>
    <scale x="6" y="0.2" z="6"/>
    <object type="primitive" name="cube" >
      <texture file="./data/tests/image/earth.ppm" u="1" v="1"/>
      <blend value="0.8"/>
      <diffuse r="1" g="1" b="0.5"/>
    </object>
  </transblock>


  <transblock>
    <translate x="-0.8" y="0" z="-0.8"/>
    <rotate x="0" y="1" z="1" a="45"/>
    <object type="primitive" name="sphere" >
      <texture file="./data/tests/image/flowers.ppm" u="3" v="3"/>
      <blend value="0.8"/>
      <specular r="0" g="0" b="0"/>
      <shininess value="20"/>
    </object>
  </transblock>

  <transblock>
    <translate x="0.8" y="0" z="-0.8"/>
    <object type="primitive" name="cube" >
      <texture file="./data/tests/image/sun.ppm" u="1" v="1"/>
      <blend value="1.0"/>
    </object>
  </transblock>

  <transblock>
    <translate x="0.8" y="0" z="0.8"/>
    <object type="primitive" name="cylinder">
      <diffuse r="1.0" g="1.0" b="1.0"/>
      <specular r="1.0" g="1.0" b="1.0"/>
      <reflective r="0.9" g="0.9" b="0.9"/>
      <shininess value="30"/>
    </object>
  </transblock>

  <transblock>
    <translate x="-0.8" y="0" z="0.8"/>
    <object type="primitive" name="cone" >
      <texture file="./data/tests/image/boccioni.ppm" u="2" v="1"/>
      <blend value="1.0"/>
    </object>
  </transblock>
</object>
</scenefile>


